datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator db {
    provider = "go run github.com/steebchen/prisma-client-go"
}

model Task {
    id        String   @id @default(uuid())
    title      String?
    description String?
    status      String? @default("pending")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator db {
    provider = "go run github.com/steebchen/prisma-client-go"
}

model Task {
    id String @id @default(uuid())
    text String?
    completed Boolean? @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}